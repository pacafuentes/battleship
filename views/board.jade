      img(src="/images/ship3.png" class="ship three" id="ship3" data-drag="true" data-jqyoui-options="{revert: 'invalid', revertDuration: 200}" jqyoui-draggable="{animate: true}")
    div(style="width: 143px; height: 49px;")
      img(src="/images/ship4.png" class="ship four" id="ship4" data-drag="true" data-jqyoui-options="{revert: 'invalid', revertDuration: 200}" jqyoui-draggable="{animate: true}")
    div(style="width: 71px; height: 41px;")
      img(src="/images/ship5.png" class="ship five" id="ship5" data-drag="true" data-jqyoui-options="{revert: 'invalid', revertDuration: 200}" jqyoui-draggable="{animate: true}")
    div(style="width: 170px; height: 56px;")
